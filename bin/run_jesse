#!/usr/bin/env bash
set -euo pipefail

export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"
pyenv activate jesse-env

JE_DIR="$HOME/trading-bots/jesse"
export JESSE_CONFIG_MODULE="config.jesse.config"
cd "$JE_DIR"
exec jesse run
