#!/usr/bin/env bash
# Launch Freqtrade webserver using the local virtual environment
set -euo pipefail

FT_DIR="$HOME/trading-bots/freqtrade"
CFG="$FT_DIR/config/freqtrade/config.json"

# Activate a Python virtual environment if one exists
if [[ -f "$FT_DIR/.venv/bin/activate" ]]; then
  source "$FT_DIR/.venv/bin/activate"
elif [[ -f "$FT_DIR/.env/bin/activate" ]]; then
  source "$FT_DIR/.env/bin/activate"
fi

freqtrade webserver -c "$CFG"

